<h1>Manage Users for  <%=Compagny.find(params[:compagny_id]).name%> </h1>
   <div class="panel-body">
    <p id="circle-buttons" class="doc-buttons">
    <i> <%= link_to new_compagny_account_user_path(), :class=> 'btn btn-white btn-circle' do %>
      <i class="fa fa-plus"></i>Add</i>
    <%end%>
    </p>
    </div>

  <div class="table-responsive">
    <table class="table table-striped b-t text-small">
    <thead>
      <tr>


        <th class="th-sortable" data-toggle="class"> First Name
          <span class="th-sort">
            <i class="fa fa-sort-down text"></i>
            <i class="fa fa-sort-up text-active"></i>
            <i class="fa fa-sort"></i>
          </span>
        </th>

         <th class="th-sortable" data-toggle="class"> Name
          <span class="th-sort">
            <i class="fa fa-sort-down text"></i>
            <i class="fa fa-sort-up text-active"></i>
            <i class="fa fa-sort"></i>
          </span>
        </th>

        <th class="th-sortable" data-toggle="class"> Email
          <span class="th-sort">
            <i class="fa fa-sort-down text"></i>
            <i class="fa fa-sort-up text-active"></i>
            <i class="fa fa-sort"></i>
          </span>
        </th>

         <th class="th-sortable" data-toggle="class"> Manager
          <span class="th-sort">
            <i class="fa fa-sort-down text"></i>
            <i class="fa fa-sort-up text-active"></i>
            <i class="fa fa-sort"></i>
          </span>
        </th>


        <th class="th-sortable" data-toggle="class"> Active ?
          <span class="th-sort">
            <i class="fa fa-sort-down text"></i>
            <i class="fa fa-sort-up text-active"></i>
            <i class="fa fa-sort"></i>
          </span>
          </th>

        <th width="30">Edit</th>
      </tr>
    </thead>
    <tbody>
      <tr>
         <% @userslistcompagny.each do |userlistcompagny| %>


         <td><%= userlistcompagny.firstname %></td>
         <td><%= userlistcompagny.name %></td>
         <td><%= userlistcompagny.email %></td>
         <td><%= userlistcompagny.manager %></td>
         <td><%= userlistcompagny.active %></td>
          <td> <%= link_to edit_compagny_account_user_path(params[:compagny_id], userlistcompagny) do  %>
              <i type="button" class= "fa fa-pencil fa-lg"> </i>
              <% end %></td>

</tr>

          <%end%>



    </tbody>
    </table>
    </div>
  </div>





