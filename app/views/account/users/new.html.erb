
  <section id="content">
    <section class="main padder">
      <div class="clearfix">
        <h4>New User </b> for <%= Compagny.find(params[:compagny_id]).name.upcase  %></h4>

      </div>
      <div class="row">
        <div class="col-sm-6">
          <section class="panel">
            <div class="panel-body">
              <div class="form-horizontal" method="get" data-validate="parsley">
                <div class="form-group" "form-horizontal" >

            <%= simple_form_for @user, url: compagny_account_users_path do |f|  %>



                <div class="form-group">
                  <label class="col-lg-3 control-label">Name</label>
                  <div class="col-lg-8">
                    <%= f.input_field :name, class: 'form-control'  %>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-lg-3 control-label">First Name</label>
                  <div class="col-lg-8">
                    <%= f.input_field :firstname, class: 'form-control'%>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-lg-3 control-label">Email</label>
                  <div class="col-lg-8">
                    <%= f.input_field :email, label: 'Nb of deliverable', class:  'input-sm spinner-input form-control'%>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-lg-3 control-label">Manager</label>
                  <div class="col-lg-8">
                    <%= f.input_field :manager, class: '' %>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-lg-3 control-label">Active</label>
                  <div class="col-lg-8">
                    <%= f.input_field :active, class: '' %>
                  </div>
                </div>


                <div class="form-group">
                  <div class="col-lg-9 col-lg-offset-3">
                   <%= f.button :submit,  class: 'btn btn-primary' %>
                  </div>
                </div>
              </div>
            </div>
            <%end%>
          </section>



  <!-- footer -->
  <footer id="footer">
    <div class="text-center padder clearfix">
      <p>
        <small>&copy; first 2013, Mobile first web app framework base on Bootstrap</small><br><br>
        <a href="#" class="btn btn-xs btn-circle btn-twitter"><i class="fa fa-twitter"></i></a>
        <a href="#" class="btn btn-xs btn-circle btn-facebook"><i class="fa fa-facebook"></i></a>
        <a href="#" class="btn btn-xs btn-circle btn-gplus"><i class="fa fa-google-plus"></i></a>
      </p>
    </div>
  </footer>
  </body>
</html>
